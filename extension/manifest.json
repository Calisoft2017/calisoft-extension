{
    "manifest_version": 2,
    "name": "Calisoft",
    "description": "Esta extension le perimitira al usuario completar la evaluacion de plataforma",
    "version": "1.0.0.2",
    "devtools_page": "devtools.html",
    "background": {
        "scripts": [
            "dist/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [
                "assets/css/style.css"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ]
}