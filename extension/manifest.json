{
    "manifest_version": 2,
    "name": "Calisoft",
    "description": "Esta extension le perimitira al usuario completar la evaluacion de plataforma",
    "version": "1.0",
    "background": {
        "scripts": [
            "dist/events.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "dafault_title": "Calisoft",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [],
            "js": [
                "dist/content.js"
            ]
        }
    ]
}